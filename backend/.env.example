# PocketBase (required for admin API operations)
POCKETBASE_URL=http://127.0.0.1:8090
POCKETBASE_ADMIN_EMAIL=admin@example.com
POCKETBASE_ADMIN_PASSWORD=CHANGE_THIS

# Backend / Frontend URLs (optional; defaults work for local dev)
BACKEND_URL=http://127.0.0.1:8000
FRONTEND_URL=http://127.0.0.1:3000

# Ollama (for AI features)
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=llama3

# Environment: set to "production" to restrict CORS
ENV=development

# Ingestion: set to "false" to enable real RSS/ingestion
TEST_MODE=true

# RSS poll: proactively check feed and ingest new articles into PocketBase
# Set RSS_POLL_ENABLED=true to run ingestion every RSS_POLL_INTERVAL_MINUTES
RSS_POLL_ENABLED=false
RSS_POLL_INTERVAL_MINUTES=30
